#: import Window kivy.core.window.Window
MyScrollView:
    size_hint: 0.98, 1
    pos_hint: {'center_y':0.5, 'center_x': .5}
    bar_width: 10
    scroll_type: ['bars', 'content']
    GridLayout:
        id: main_box
        size_hint_y: None
        cols: 1
        height: self.minimum_height

        Button:
            text: 'button 2'
            size_hint: None, None
            size: 400, 150
            on_press: print('ScrollView button pressed')

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            Label:
                size_hint: None, None
                size: self.texture_size
                id: label
                font_size: 20
                text: 'Teste'
            ScrollView:
                id: inner_scroll
                do_scroll: True, True
                size_hint: 1, None
                effect_cls: "ScrollEffect"
                height: 150
                GridLayout:
                    id: horizontal_grid
                    rows: 1
                    padding: [10, 10]
                    size: self.minimum_size
                    size_hint: None, 1.01
                    width: self.minimum_width

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            Label:
                size_hint: None, None
                size: self.texture_size
                id: label
                font_size: 20
                text: 'Teste'
            ScrollView:
                id: inner_scroll2
                do_scroll: True, True
                size_hint: 1, None
                effect_cls: "ScrollEffect"
                height: 150
                GridLayout:
                    id: horizontal_grid2
                    rows: 1
                    padding: [10, 10]
                    size: self.minimum_size
                    size_hint: None, 1.01
                    width: self.minimum_width
